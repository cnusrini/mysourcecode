<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmpTrack.Views.Login.LoginPage"
             Title="Login"
             xmlns:local="clr-namespace:EmpTrack.Customizations">

    <ContentPage.Content>
        <StackLayout Orientation ="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">

            <StackLayout>

                <!--User 1-->

                <local:LoginButton Text="User 1" VerticalOptions="Center" Command="{Binding User1Command}" 
            HorizontalOptions="CenterAndExpand" Style="{StaticResource ButtonStyle}" 
             WidthRequest="110"/>


                <!--Domain 1-->

                <local:LoginButton Text="Dealer" VerticalOptions="Center" Command="{Binding DealerCommand}" 
            HorizontalOptions="CenterAndExpand" Style="{StaticResource ButtonStyle}" 
             WidthRequest="110"/>

                <!--Doamin 2-->

                <local:LoginButton Text="Service Provider" VerticalOptions="Center" Command="{Binding ServiceProviderCommand}"
            HorizontalOptions="CenterAndExpand" Style="{StaticResource ButtonStyle}" 
             WidthRequest="110"/>

            </StackLayout>
                       
            
        </StackLayout>
    </ContentPage.Content>

</ContentPage>