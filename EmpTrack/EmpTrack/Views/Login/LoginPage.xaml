<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmpTrack.Views.Login.LoginPage"
             Title="Login"
             xmlns:local="clr-namespace:EmpTrack.Customizations">

    <ContentPage.Content>
        <StackLayout Orientation ="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">

            <StackLayout>
                <!--Domain 1-->

                <local:LoginButton Text="Domain 1" VerticalOptions="Center" Command="{Binding Domain1Command}" 
            HorizontalOptions="CenterAndExpand" Style="{StaticResource ButtonStyle}" 
             WidthRequest="110"/>

                <!--Doamin 2-->

                <local:LoginButton Text="Domain 2" VerticalOptions="Center" Command="{Binding Doamin2Command}"
            HorizontalOptions="CenterAndExpand" Style="{StaticResource ButtonStyle}" 
             WidthRequest="110"/>

            </StackLayout>
                       
            
        </StackLayout>
    </ContentPage.Content>

</ContentPage>